\ProvidesPackage{prodrive/package/pdissue}
\RequirePackage{prodrive/package/pdtabular}
\RequirePackage{tabularx}

\newenvironment{pdissues}[0]
{%
	\begingroup
	\let\clearpage\relax
	\chapter*{Open issues}
	\endgroup
	\pdtabularx{\textwidth}{l|l|X|l|l}
		\pdtablehead{Issue & Section & Description & Responsible & Due Date}
}
{%
	\endpdtabularx%
}%

% Document history entry macro
\newcommand{\pdissue}[5]
{
	\pdtablerow{#1 & #2 & #3 & #4 & #5}
}