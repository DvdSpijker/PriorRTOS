\ProvidesPackage{prodrive/package/pdhwqrd}
\RequirePackage{framed}
\RequirePackage{capt-of}

% Qualification tool with link to CNM
% \href used instead of \pdurl to have short link text
\providecommand{\pdQTool}[2]{\href{http://cnm/Equipment/EquipmentDetails.aspx?SN=00000#2}{\pdunderline{#1#2}}}

% Schematic signal with measurement location.
\providecommand{\pdSCHsig}[2]{\emph{#1@#2} }

% Component Refdes formatting
\providecommand{\pdRefDes}[1]{\emph{#1} }

% Measurement floating environment for side-by-side layout
\newenvironment{pdMeas}
{
	\begin{minipage}[t]{0.495\textwidth}
	\begin{framed}
	\small
	\raggedright
	\captionsetup{format=plain, font={small,it}, singlelinecheck=off, skip=2pt, hypcap=false}
}
{
	\end{framed}
	\vspace{7pt}
	\end{minipage}%
}

% Result table with standard heading. Non-float and narrow format for use in side-by-side environments.
\newenvironment{pdMeasTable}[2]
{
	\captionof{table}{#1}
	\label[table]{#2}
	\begin{pdtabular}{l|r|r|r|r|l}
	\pdtablehead{Item & Min. & Typ. & Max. & Meas. & Unit}
}
{
	\end{pdtabular}
	\\[5pt]
}

% Custom results table (no heading). Non-float and narrow format for use in side-by-side environments.
\newenvironment{pdMeasGenTable}[3]
{
	\captionof{table}{#1}
	\label[table]{#2}
	\begin{pdtabular}{#3}
}
{
	\end{pdtabular}
	\\[5pt]
}

% Environment to list scope signals under measurement figures
\newenvironment{pdMeasSignals}
{
\vspace{5pt}
\begin{tabular}{ll}
}
{
\end {tabular}
}

