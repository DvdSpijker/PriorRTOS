\newcommand{\pdMeasSig}[4]
{
#1(#2,#3):&#4\\
}

% Measurement figure. Non-float and narrow format for use in side-by-side environments.
\newcommand{\pdMeasFigure}[3]
{
	\includegraphics[width=0.97\textwidth]{#1}
	\captionof{figure}{#2}
	\label[figure]{#3}
}


% Store abbreviation of current measurement. Convenient to use in power supply qualification when there are a lot of the same procedures repeated.
\newcommand{\pdSectionPrefix}{}
\newcommand{\pdSetSectionPrefix}[1]{\renewcommand{\pdSectionPrefix}{#1: }}

